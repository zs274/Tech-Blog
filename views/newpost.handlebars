<h2>Create a new post</h2>

<form class="form">
  <div class="form-group">
    <p>Post title:</p>
    <h3 class="form-field" contenteditable="true" id="post-title" aria-placeholder="Enter title.."></h3>
  </div>
  <div>
    <p>Blog description:</p>
  <p class="form-field" contenteditable="true" id="post-desc" aria-placeholder="Enter text..."></p>
    <p>Blog content:</p>
  <p class="form-field" contenteditable="true" id="post-text" aria-placeholder="Enter text..."></p>
  </div>
  <div class="form-group">
    <button class="btn" type="submit" id="create">Publish post</button>
  </div>
</form>


<script src="/js/newpost.js"></script>
