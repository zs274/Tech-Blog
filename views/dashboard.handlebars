<div id="top"><h1 class="mb-5 page-title">My Posts</h1><a id="new-post" href="/post/new">Create a new post</a> </div>

{{#each myPosts as |post| }} 
<div class="row align-center mb-5">
  <div class="col-md-6 blog-post">
    <h2 class="padding blog-header"><a href="/post/{{post.id}}">{{post.name}}</a></h2>
    <p class="padding blog-description">{{post.description}}</p>  
    <p class="padding blog-info">{{format_date post.date}} | Me</p>
    <p class="padding-r edit"><a href="post/edit/{{post.id}}">Edit post</a></p>
   </div>
</div>
{{/each}}